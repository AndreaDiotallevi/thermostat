<!DOCTYPE html>
<html>
  <head>
    <title>Thermostat</title>
    <script src="src/thermostat.js"></script>
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="src/interface.js"></script>
    <link rel='stylesheet' type='text/css' href='style/style.css'>
    <link href="https://fonts.googleapis.com/css?family=Roboto&display=swap" rel="stylesheet">
  </head>
  <body>
    <header class="box">
      <div class="enter-city-container">
        <input type="text" id="city-name" placeholder="  Enter your city">
        <button id="change-city">Submit</button>
      </div>
    </header>
    <div class="temperature-controls box">
      <button id="temperature-up"></button>
      <h1 id="temperature"></h1>
      <button id="temperature-down">-</button>
    </div>
    <div class="energy-mode-controls box">
      <!-- power saving mode is <span id ="power-saving-status">on</span> -->
      <button id="powersaving-on">PSM on</button>
      <button id="temperature-reset">reset</button>
      <button id="powersaving-off">PSM off</button>
    </div>
    <footer class="box">
      <div class="weather-city-container">
        <h3 id="weather-city"></h3>
        <p>
          <span id="weather-temperature"></span>Â°C - 
          <span id="weather-description"></span>
        </p>
      </div>
    </footer>
  </body>
</html>
